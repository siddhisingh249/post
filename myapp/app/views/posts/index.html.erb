<div class="container">
  <%= link_to 'New Post', new_post_path,:class => "btn btn-success" %>
  <h1>Posts</h1>
    <% @posts.each do |post| %>
      <p><b><%= post.user.email %></b></p>
      <%= image_tag post.avatar_url,:class => "img-fluid img-thumbnail " %><br><br>
      <p><b><%= post.title %></b><br>
      <div class="field">
        <%= post.body %><br>
      </div>
      <%= link_to 'show', post%>
      <%= link_to "comments(#{post.comments.count})", "posts/comments/#{post.id}" %>
      <% if current_user.id == post.user_id %>
        <%= link_to 'Edit', edit_post_path(post)%>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?'} %>
      <%end %>
      </p>
    <% end %>
<br>

</div>
