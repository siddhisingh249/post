<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation alert">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title,:class => "form-control field" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body,:class => "form-control field" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :class => "form-control field" %><br>
    <% if @post.avatar? %>
      <%= image_tag @post.avatar.url %>
    <% end %>
    
  </div>

  <div class="actions form-group">
    <%= f.submit "Create Post", :class => "btn btn-success" %>
  </div>
<% end %>
