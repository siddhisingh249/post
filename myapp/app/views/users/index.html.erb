<% if current_user.admin %>
<h1>Users</h1>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th> Username </th>
      <th colspan="2"> Admin </th>
      <th>Delete User</th>
    </tr>
  </thead>

  <tbody>

    <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <% if user.admin? %>
          <td>admin<td><%= link_to "Remove Admin", "/users/admin/#{user.id}",method: :post, :class => "btn btn-success btn-sm" %></td></td>
        <% else %>
          <td>user<td><%= link_to "Make Admin", "/users/admin/#{user.id}",method: :post, :class => "btn btn-success btn-sm" %></td></td>
        <% end %>
        <td><%= link_to 'Delete', "users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
    <% end %>
      </tr>
   
  </tbody>
</table>

<br>
<%= link_to 'Back', root_path, :class => "btn btn-warning" %>
 <% end %>




